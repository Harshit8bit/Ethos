<% layout("/layouts/boilerplate") %>

<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        margin-top: 1rem;
        
    }
    .filter{
        text-align: center;
        margin-right: 1rem;
        opacity: 0.8;
        align-items: center;
       
    }
    .filter:hover {
        opacity: 1;
        cursor: pointer;
    }
    .tax-info {
        display: none;
    }
    .tax-toggle {
        border: 1px solid  black;
        border-radius: 1rem;
        height: 3rem;
        padding: 1rem;
        margin-left: 3rem;
        display: flex;
        align-items: center;
    }
</style>
<body>
    <!-- <H3>ALL LISTINGS</H3> -->

    <div id="filters">
        <div class="filter">
            <div>
                <i class="fa-solid fa-fire"></i>
                <p>Trending</p>
            </div>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-bed"></i>
                <p>Rooms</p>
            </div>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-mountain-city"></i>
                <p>Iconic cities</p>
            </div>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-mountain"></i>
                <p>Mountains</p>
            </div>
        </div>
        <div class="filter">
            <div>
                <i class="fa-brands fa-fort-awesome"></i>
                <p>Castles</p>
            </div>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-cow"></i>
                <p>Farms</p>
            </div>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-snowflake"></i>
                <p>Arctic</p>
            </div>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-person-swimming"></i>
                <p>Amazing pool</p>
            </div>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-campground"></i>
                <p>Camping</p>
            </div>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-caravan"></i>
                <p>Cara van</p>
            </div>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-landmark-dome"></i>
                <p>Domes</p>
            </div>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-ship"></i>
                <p>Boats</p>
            </div>
        </div>

        <div class="tax-toggle">
            <div class="form-check form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
            </div>
        </div>
    </div>
 
   <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
      <% for(let listing of allListing) {%>
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col" >
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">

                            <div class="card-img-overlay">
                                <h5 class="card-title"></h5>
                            </div>
                           
                <div class="card-body">
                    <p class="card-text"><b><%= listing.title %> </b> <br>
                    <% if (listing.price) { %>
                         &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
                         <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                    <% } %>
                </div>
            </div>
        </a> 
        <% } %>
   </div>
       
</body>

<script>
    let taxSwitch = document.getElementById("switchCheckDefault");

    // Use the "change" event, which is better for switches
    taxSwitch.addEventListener("change", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        let newDisplay;

        // 1. Check if the switch is now ON
        if (taxSwitch.checked) {
            newDisplay = "inline";
        } else {
            // 2. If it's OFF, hide the text
            newDisplay = "none";
        }

        // 3. Loop through all tax elements and update them
        for (let info of taxInfo) {
            info.style.display = newDisplay;
        }
    });
</script>